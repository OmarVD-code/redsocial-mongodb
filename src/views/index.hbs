{{#if user}}
<div class="card mb-4">
	<div class="card-header bg-dark">
		<h3 class="card-title text-white">
			<i class="far fa-image"></i> Upload an Image
		</h3>
	</div>
	<div class="card-body">
		<!-- FORMULARIO PARA PUBLICAR IMÁGENES  -->
		<form action="/images" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<div class="input-group">
  					<div class="custom-file">
    					<input type="file" class="custom-file-input" name="image" id="inputGroupFile" aria-describedBy="inputGroupFileAddon" accept="image/x-png,image/gif,image/jpeg" required>
    					<label class="custom-file-label" for="inputGroupFile">Choose file</label>
  					</div>
				</div>
			</div>

			<div class="form-group">
				<input type="text" class="form-control" name="title" placeholder="Image title" required>
			</div>

			<div class="form-group">
				<textarea name="description" class="form-control" placeholder="Describe your image" required></textarea>
			</div>

			<div class="form-group">
				<button class="btn btn-success">
					<i class="fas fa-upload"></i> Upload image
				</button>
			</div>
		</form>
	</div>
</div>
{{/if}}

<!--  RENDERIZANDO IMÁGENES -->
<div class="card">
	<div class="card-header bg-dark text-white">
		<h3><i class="far fa-images"></i> Recent Uploads</h3>
	</div>
	<div class="card-body">
		<div class="row">
			{{#each images}}
			<div class="col-md-4 mb-4">
				<a href="/images/{{ uniqueId }}">
					<img class="img-fluid w-100 h-100" src="/public/upload/{{ filename }}" alt="Imagen">
				</a>
			</div>
			{{/each}}
		</div>
	</div>
</div>
